---
import { Icon } from "astro-icon";
---

<footer>
  <!-- <Icon name="github" /> -->
  <div class="social-links">
    <a href="https://github.com/shepleysound" class="social">
      <Icon name="github" />
    </a>
    <a href="https://linkedin.com/in/" class="social">
      <Icon name="linkedin" />
    </a>
  </div>
</footer>
<style>
  :root {
    --link-gradient: linear-gradient(
      45deg,
      #27829c,
      #2338a2 30%,
      var(--color-border) 60%
    );
  }

  footer {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    margin-top: auto;
  }

  .social-links {
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .social {
    margin: 0 0.5rem;
  }

  [astro-icon] {
    width: 3rem;
    color: #121212;
    fill: #121212;
    transition: fill 0.6s cubic-bezier(0.22, 1, 0.36, 1);
  }

  [astro-icon]:hover {
    fill: #385099;
  }
</style>
